
    <div class='header-bar'>
    {% comment %}  
     Image picker does not upload svg files, so I hard coded it in. Otherwise it would 
     have been customizable in the theme.
    {% endcomment %}
        <div id='logo'>
            {{ 'white_logo.svg' | asset_url | img_tag }}
        </div>

        <div id='header-links'>
            {% for link in linklists.main-menu.links %}
                {% assign child_list_handle = link.title | handleize %}
                    {% if linklists[child_list_handle].links != blank %}
                        <a href="{{ link.url }}">{{ link.title }}</a>
                        [{% for childlink in linklists[child_list_handle].links %}
                        <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                        {% endfor %}]
                    {% else %}
                        <a href="{{ link.url }}" class='menu-links'>{{ link.title }}</a>
                    {% endif %}
            {% endfor %}
        </div>
    </div>